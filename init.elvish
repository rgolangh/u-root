#!/bbin/elvish

modprobe e1000
modprobe virtio_net
modprobe virtio_pci
modprobe virtio_scsi
modprobe virtio_blk
modprobe virtio_rng

echo "----------------------------------------"
echo "Welcome to OpenShift Assisted bootloader"
echo ""
echo "Enter the following to boot from the default infra-env ID:"
echo "assisted-bootloader -refresh-token-file /token -infra-env-id-file /infraenvid"


